<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/deliveryItemLayout"
    android:background="?selectableItemBackground"
    android:padding="@dimen/delivery_item_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/delivery_image_size"
        android:layout_height="@dimen/delivery_image_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/delivery_placeholder" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image"
        android:fontFamily="sans-serif-light"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="3.5sp"
        android:maxLines="2"
        android:paddingStart="5dp"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Description" />

</RelativeLayout>